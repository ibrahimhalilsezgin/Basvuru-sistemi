@model Candidate

<div>
    <h3 class="display-4">Congrulations @Model.FirstName </h3>

    <p class="lead">Your Application has been <mark>accepted.</mark></p>    
    <p class="lead">Thanks for your interest.</p>

    <hr>

    <blockquote class="blockqoute">
        You have enrolled to @Model.SelectedCourse course.
    </blockquote>    

    <p class="text-muted">
        You applied at @Model.ApplyAt .
    </p>

    <div class="button-group">
        <a class="btn btn-outline-success" asp-controller="Home" asp-action="Index">Home</a>
        <a class="btn btn-outline-success" asp-action="Index">Applications</a>
    </div>
</div>